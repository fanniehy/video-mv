/* pages/video/video.wxss */

page, .videoPage {
  width: 100%;
  height: 100%;
}

.videoPage {
  background-color: #222;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-content: space-between;
}

.videoSrc {
  width: 100%;
  height: 40%;
}

video {
  width: 100%;
  height: 100%;
}

text, view {
  font-size: 12px;
  color: #fff;
}

scroll-view {
  width: 100%;
  height: 60%;
}

.ads view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  border-bottom: 1rpx solid #333;  
}
::-webkit-scrollbar{  
    width: 0;  
    height: 0;  
    color: transparent;  
} 
.ads-disappear {
  background-color: #444;
  border-radius: 25px;
  color: #ccc;
  padding: 7px;
}

.common {
  padding: 0 20rpx;
}

.videoTitle {
  padding: 20rpx 0;
}

.videoTitle text {
  font: 20px "楷体";
  font-weight: 600;
}

.des-words text {
  font-size: 14px;
  color: #ccc;
}

.video-varity {
  padding: 15rpx 0;
  font: 12px "楷体";
  color: #ccc;
}

.video-type {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5rpx 5px;
  border-radius: 5px;
  border: 1px solid #fff;
}

.video-type  text {
  font-size: 10px;
}

.share {
  padding: 10rpx 0;
  padding-bottom: 50rpx;
  border-bottom: 1rpx solid #333;
}
.series{
  padding: 10px 0 20px;
}
.series .series-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
}
.series-title view{
  display: flex;
  align-items: center;
}
.scroll_box {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

.series-num text {
  display: inline-block;
  margin-right: 5px;
  height: 45px;
  width: 45px;
  text-align: center;
  line-height: 45px;
  border-radius: 10px;
  background-color: #666;
  color: #fff;
}
.big-series text{
  display: inline-block;
  width:14.1%;
  height: 45px;
  text-align: center;
  line-height: 35px;
  border-radius: 5px;
  background-color: #666;
  color: #fff;
  margin-right: 3%;
  margin-bottom: 10px; 
}
.big-series text:nth-of-type(6n){
  margin-right: 0;
}
.focus .focus-simple {
  display: inline-block;
  height: 85px;
  width: 185px;
  padding: 10px;
  background-color: #666;
  margin-right: 5px;
  border-radius: 5px;  
}

.focus .focus-simple text {
  display: block;
  width: 100%;
  height: 100%;
  line-height: 20px;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommend-content {
  display: flex;
  padding: 15rpx 0 15rpx 20rpx;
}

.recommend-content image {
  width: 45%;
  height: 80px;
  border-radius: 20rpx;
}

.recommend-title {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.comments {
  background-color: #111;
}

.self-comment {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 0;
}

.self-comment input {
  padding: 5px;
  width: 80%;
  background-color: #555;
  border-radius: 23px;
}

.comments-user {
  display: flex;
  justify-content: space-between;
}

.comments-name {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.comments-name text {
  margin: 0 20rpx;
}

.comments-content {
  padding: 20rpx 0;
  line-height: 36rpx;
}

.comment-user {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.fontColor-name {
  color: #3c65c3;
}
.comments-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sendComment textarea{
  width: 100%;
  margin: 20px auto;
  height: 100px;
  background-color: #666;
  border-radius: 20px;
  padding: 10px;
}
.send{
  font-size: 14px;
  background-color: #f00;
  color: #fff;
  width: 15%;
}